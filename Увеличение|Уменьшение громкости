import wave
import struct
source = wave.open("in.wav", mode="rb")
dest = wave.open("out.wav", mode="wb")
dest.setparams(source.getparams())
frames_count = source.getnframes()
volume_rate = float(input())
for i in range(frames_count):
    frame = source.readframes(1)
    unpack = struct.unpack('<' + str(1) + 'h', frame)
    minVol = -32768
    maxVol = 32767
    amplituda = int(unpack[0]*volume_rate)
    if amplituda>maxVol:
        amplituda = maxVol
    elif amplituda<minVol:
        amplituda = minVol
    newFrame = struct.pack('<' + str(1) + 'h', amplituda)
    dest.writeframes(newFrame)
source.close()
dest.close()
